@model IEnumerable<Resturants.Models.Meal>

@{
    ViewData["Title"] = "Index";
}

<h1>Meals</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.ShortDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MealID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MealID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MealID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
